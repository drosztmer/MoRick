<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/my_nav"
    app:startDestination="@id/charactersFragment">

    <fragment
        android:id="@+id/charactersFragment"
        android:name="com.codecool.morick.ui.fragments.CharactersFragment"
        android:label="Characters"
        tools:layout="@layout/fragment_characters" >
        <action
            android:id="@+id/action_charactersFragment_to_detailsActivity"
            app:destination="@id/detailsActivity" />
    </fragment>
    <activity
        android:id="@+id/detailsActivity"
        android:name="com.codecool.morick.ui.DetailsActivity"
        android:label="Details"
        tools:layout="@layout/activity_details" >
        <argument
            android:name="character"
            app:argType="com.codecool.morick.models.RickAndMortyCharacter" />
    </activity>
    <fragment
        android:id="@+id/favoriteCharactersFragment"
        android:name="com.codecool.morick.ui.fragments.FavoriteCharactersFragment"
        android:label="Favorites"
        tools:layout="@layout/fragment_favorite_characters" >
        <action
            android:id="@+id/action_favoriteCharactersFragment_to_detailsActivity"
            app:destination="@id/detailsActivity" />
    </fragment>
</navigation>