<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="mainViewModel"
            type="com.codecool.morick.viewmodels.MainViewModel" />
        <variable
            name="adapter"
            type="com.codecool.morick.adapters.CharactersAdapter" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/blue_light"
        tools:context=".ui.fragments.characters.CharactersFragment">

        <com.todkars.shimmer.ShimmerRecyclerView
            android:id="@+id/characters_recycler_view"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="@dimen/margin_medium"
            android:layout_marginEnd="@dimen/margin_medium"
            android:orientation="vertical"
            readApiResponse="@{mainViewModel.rickAndMortyResponse}"
            getAdapterItemCount="@{adapter.itemCount}"
            app:shimmer_recycler_item_count="3"
            app:shimmer_recycler_layout="@layout/item_placeholder_character"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:indeterminateTint="@color/yellow_dark"
            android:visibility="invisible"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/error_image_view"
            android:layout_width="@dimen/image_size"
            android:layout_height="@dimen/image_size"
            android:alpha="0.5"
            android:src="@drawable/ic_sad"
            android:visibility="invisible"
            readApiResponse="@{mainViewModel.rickAndMortyResponse}"
            getAdapterItemCount="@{adapter.itemCount}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.37" />

        <TextView
            android:id="@+id/error_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_medium"
            android:alpha="0.5"
            android:text="@string/no_internet_connection"
            android:textSize="@dimen/error_text_size"
            android:textStyle="bold"
            android:visibility="invisible"
            readApiResponse="@{mainViewModel.rickAndMortyResponse}"
            getAdapterItemCount="@{adapter.itemCount}"
            app:layout_constraintEnd_toEndOf="@+id/error_image_view"
            app:layout_constraintStart_toStartOf="@+id/error_image_view"
            app:layout_constraintTop_toBottomOf="@+id/error_image_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>